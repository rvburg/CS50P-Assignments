def main():
	greeting = greet_format(input("Greeting: "))
	letter = start_letter(greeting)
	hello = start_hello(greeting)

	if hello == True:
		print("$0")
	elif letter == True:
		print("$20")
	elif letter == True and hello != True:
		print("$20")
	else:
		print("$100")


def greet_format(g):
	g = g.strip().lower()
	return g


def start_letter(h):
	if h.startswith("h") == True:
		return True
	else:
		return False


def start_hello(hello):
	if "hello" in hello:
		return True
	else:
		return False


main()



































def greet_format(g):
	g = g.strip().lower()
	return g
